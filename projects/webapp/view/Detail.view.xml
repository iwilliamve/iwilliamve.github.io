<mvc:View
controllerName="docgenie.controller.Detail"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		title="Document Preview"
		class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		showNavButton="true" >
		<headerContent>
			<Button icon="sap-icon://action" tooltip="Share" />
		</headerContent>
		<subHeader>

		</subHeader>
		<content>
			<Panel height="100%">
			<VBox id="idVboxDocPrev">

			</VBox>
		</Panel>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Accept" type="Accept" press="onAccept" />
				<Button text="Update" type="Emphasized" press="handleDocContentChanged"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>